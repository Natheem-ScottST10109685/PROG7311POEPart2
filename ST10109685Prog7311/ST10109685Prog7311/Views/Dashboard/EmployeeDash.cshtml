@{
    Layout = null;
    var employeeName = ViewBag.EmployeeName ?? "Employee";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Dashboard - Agri-Energy Connect</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f0f8ff;
            color: #333;
        }

        header {
            background-color: #007BFF;
            color: white;
            padding: 20px;
            text-align: center;
        }

        nav {
            background-color: #0056b3;
            display: flex;
            justify-content: center;
            padding: 12px 0;
        }

            nav a {
                color: white;
                margin: 0 16px;
                text-decoration: none;
                font-weight: bold;
            }

                nav a:hover {
                    text-decoration: underline;
                }

        .dashboard {
            max-width: 1100px;
            margin: 40px auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        }

        .welcome {
            font-size: 1.6rem;
            margin-bottom: 20px;
            color: #007BFF;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
        }

        .card {
            flex: 1 1 45%;
            background-color: #e3f0ff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

            .card h3 {
                margin-top: 0;
                color: #0056b3;
            }

            .card a {
                display: inline-block;
                margin-top: 10px;
                color: #007BFF;
                text-decoration: none;
                font-weight: bold;
            }

                .card a:hover {
                    text-decoration: underline;
                }

        .footer {
            text-align: center;
            padding: 20px;
            background-color: #0056b3;
            color: white;
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <header>
        <h1>Agri-Energy Connect</h1>
        <p>Welcome to your Employee Dashboard</p>
    </header>

    <nav>
        <a href="#">Home</a>
        <a asp-controller="Market" asp-action="AllProducts">Marketplace</a>
        <a href="/Training/Employee">Training</a>
        <a href="/Collaboration/Employee">Collaboration</a>
        <a href="/Forum/Employee">Forum</a>
        <a href="/Login/Logout">Logout</a>
    </nav>

    <div class="dashboard">
        <div class="welcome">👋 Hello, @employeeName!</div>

        <div class="card-container">
            <div class="card">
                <h3>Add New Farmer</h3>
                <p>Register a new farmer on the platform, giving them access to sustainable tools and markets.</p>
                <a href="/Farmer/Add">Go to Add Farmer →</a>
            </div>

            <div class="card">
                <h3>View & Filter Products</h3>
                <p>Manage and search through products submitted by users. Filter by category, farmer, or status.</p>
                <a asp-controller="Employee" asp-action="ManageProducts">View Products →</a>
            </div>
        </div>
    </div>

    <div class="footer">
        &copy; 2025 Agri-Energy Connect | Empowering Sustainable Agriculture
    </div>

</body>
</html>
