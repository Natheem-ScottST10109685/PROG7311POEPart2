@model ST10109685Prog7311.Models.Product

@{
    Layout = null;
    ViewBag.Title = "Edit Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Edit Product - Agri-Energy Connect</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f8fb;
            margin: 0;
            padding: 0;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #007BFF;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.1);
            flex: 1;
        }

        h2 {
            color: #007BFF;
        }

        form {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #e9f2ff;
            border-radius: 8px;
        }

        label {
            font-weight: bold;
            margin-top: 10px;
            display: block;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 6px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 12px;
        }

            button:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        footer {
            background-color: #007BFF;
            color: white;
            padding: 10px 0;
            text-align: center;
            font-size: 0.9em;
            margin-top: auto;
        }

            footer a {
                color: white;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <h1>Edit Product</h1>
        <p>Update Product Information</p>
    </header>

    <div class="container">
        <h2>Edit Product Details</h2>
        <form asp-controller="Farmer" asp-action="EditProduct" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="FarmerEmail" />

            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" required />
            <span asp-validation-for="ProductName" class="text-danger"></span>

            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

            <label asp-for="Category">Category</label>
            <select asp-for="Category" required>
                <option>Solar</option>
                <option>Wind</option>
                <option>Biogas</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>

            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>

            <div class="button-group">
                <button type="submit">Save Changes</button>
                <a asp-controller="Farmer" asp-action="MyProducts" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <footer>
        <div>© 2025 - ST10109685Prog7311 - <a href="/privacy">Privacy</a></div>
    </footer>
</body>
</html>