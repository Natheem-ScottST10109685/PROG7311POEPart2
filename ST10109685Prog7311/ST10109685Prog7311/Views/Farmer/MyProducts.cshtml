@model List<ST10109685Prog7311.Models.Product>
@{
    ViewBag.Title = "My Products";
    Layout = null;
    var farmerName = ViewBag.FarmerName ?? "Farmer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>My Products - Agri-Energy Connect</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f8fb;
            margin: 0;
            padding: 0;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #007BFF;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1100px;
            margin: 30px auto;
            padding: 20px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.1);
            flex: 1;
        }

        h2 {
            color: #007BFF;
        }

        form {
            margin-bottom: 40px;
            padding: 20px;
            background-color: #e9f2ff;
            border-radius: 8px;
        }

        label {
            font-weight: bold;
            margin-top: 10px;
            display: block;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 6px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 12px;
        }

            button:hover {
                background-color: #0056b3;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        .action-links a {
            margin-right: 12px;
            color: #007BFF;
            font-weight: bold;
        }

            .action-links a:hover {
                text-decoration: underline;
            }

        footer {
            background-color: #007BFF;
            color: white;
            padding: 10px 0;
            text-align: center;
            font-size: 0.9em;
            margin-top: auto;
        }

            footer a {
                color: white;
                text-decoration: underline;
            }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 6px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome, @farmerName 👨‍🌾</h1>
        <p>Manage Your Product Listings</p>
    </header>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <h2>Add a New Product</h2>
        <form asp-controller="Farmer" asp-action="AddProduct" method="post">
            <label for="ProductName">Product Name</label>
            <input id="ProductName" name="ProductName" required />

            <label for="Description">Description</label>
            <textarea id="Description" name="Description" required></textarea>

            <label for="Category">Category</label>
            <select id="Category" name="Category" required>
                <option>Solar</option>
                <option>Wind</option>
                <option>Biogas</option>
                <option>Other</option>
            </select>

            <label for="Price">Price</label>
            <input id="Price" name="Price" type="number" step="0.01" required />

            <button type="submit">Add Product</button>
        </form>

        <h2>My Product Listings</h2>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Category</td>
                            <td>R @string.Format("{0:0.00}", product.Price)</td>
                            <td>@product.Description</td>
                            <td class="action-links">
                                <a asp-controller="Farmer" asp-action="EditProduct" asp-route-id="@product.ProductId">Edit</a>
                                <a asp-controller="Farmer" asp-action="DeleteProduct" asp-route-id="@product.ProductId" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No products found. Add your first product above.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        <div>© 2025 - ST10109685Prog7311 - <a href="/privacy">Privacy</a></div>
    </footer>
</body>
</html>